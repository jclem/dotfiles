{
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.fontFamily": "Berkeley Mono Variable, Menlo, Monaco, 'Courier New', monospace",
	"editor.fontVariations": "'wdth' 80",
	"editor.fontLigatures": true,
	"editor.fontSize": 14,
	"editor.formatOnSave": true,
	"editor.scrollbar.horizontalScrollbarSize": 8,
	"editor.scrollbar.verticalScrollbarSize": 8,
	"git.confirmSync": false,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["<space>"],
			"commands": ["whichkey.show"]
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		{
			"before": ["<space>"],
			"commands": ["whichkey.show"]
		}
	],
	"whichkey.bindingOverrides": [
		{
			"command": "workbench.action.quickOpen",
			"keys": "f.d",
			"name": "Quick Open",
			"type": "command"
		},
		{
			"command": "workbench.action.files.revert",
			"keys": "f.v",
			"name": "Revert file",
			"type": "command"
		},
		{
			"commands": ["json.sort", "editor.action.formatDocument"],
			"keys": "f.j",
			"name": "JSON: Sort Document",
			"type": "commands"
		},
		{
			"commands": ["issue.copyGithubPermalink"],
			"keys": "g.l",
			"name": "Copy GitHub Permalink",
			"type": "commands"
		},
		{
			"commands": ["issue.copyGithubPermalinkWithoutRange"],
			"keys": "g.L",
			"name": "Copy GitHub Permalink",
			"type": "commands"
		},
		{
			"commands": ["issue.copyMarkdownGithubPermalink"],
			"keys": "g.m",
			"name": "Copy Markdown GitHub Permalink",
			"type": "commands"
		},
		{
			"commands": ["issue.copyMarkdownGithubPermalinkWithoutRange"],
			"keys": "g.M",
			"name": "Copy Markdown GitHub Permalink",
			"type": "commands"
		},
		{
			"commands": ["editor.action.revealDefinition"],
			"keys": "s.d",
			"name": "Go to Definition",
			"type": "commands"
		},
		{
			"commands": ["workbench.action.toggleStatusbarVisibility"],
			"keys": "T.s",
			"name": "Toggle Status Bar Visibility",
			"type": "commands"
		}
	],
	"window.autoDetectColorScheme": true,
	"window.commandCenter": false,
	"workbench.activityBar.orientation": "vertical",
	"workbench.iconTheme": "rose-pine-icons",
	"workbench.layoutControl.enabled": false,
	"workbench.navigationControl.enabled": false,
	"workbench.preferredDarkColorTheme": "Tokyo Night Storm",
	"workbench.preferredLightColorTheme": "Tokyo Night Light",
	"workbench.statusBar.visible": false
}
